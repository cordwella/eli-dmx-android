<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@drawable/imgback_selector"
        android:id="@+id/sceneFullButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/popupMenuButton"
        android:layout_toStartOf="@+id/popupMenuButton"
        android:src="@android:drawable/ic_media_play"
        android:clickable="true"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:background="@drawable/imgback_selector"
        android:id="@+id/popupMenuButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/ic_menu_edit"
        android:clickable="true"
        />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf = "@id/sceneFullButton"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Name"
                android:textColor="#ffffff"
            android:textSize="19sp"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/category"
                android:text="Category"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="3dp"
                android:textColor="#0008ff"
                android:background="@drawable/cat_back" />

        </LinearLayout>
        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            android:max="255"
            android:id="@+id/seekBar"
            android:progressDrawable="@drawable/progressbar2"/>
    </LinearLayout>


</RelativeLayout>
